<%= error_messages_for :tweet %>

<% if current_user%>
<% form_for @tweet do |f| -%>
  <%= f.label :message, "What's happening #{h current_user}?" %>
  <%= f.text_field :message %>
  <%= f.submit "Tweet", :disable_with => 'Tweeting...' %>
<% end -%>
<% end%>

<ol class="tweets">
	<%= render @tweets %>
</ol>


