<%= error_messages_for :tweet %>

<% form_for @tweet do |f| -%>
  <%= f.label :message, "What's happening" %>
  <%= f.text_field :message %>
  <% if current_user%>
by <%= h current_user %>
  <% else current_user %>
  	<%= f.text_field :user %>
  <% end%>
  <%= f.submit "Tweet", :disable_with => 'Tweeting...' %>
<% end -%>

<ol class="tweets">
	<%= render @tweets %>
</ol>


